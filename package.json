{
  "name": "crm",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm run build && pnpm run preview",
    "dev:remote": "pnpm --filter cashapps-remote dev",
    "dev:host": "pnpm --filter crm-host dev",
    "build": "pnpm --filter cashapps-remote build && pnpm --filter crm-host build",
    "build:remote": "pnpm --filter cashapps-remote build",
    "build:host": "pnpm --filter crm-host build",
    "preview": "pnpm -r --parallel preview",
    "preview:remote": "pnpm --filter cashapps-remote preview",
    "preview:host": "pnpm --filter crm-host preview",
    "start": "pnpm run build && pnpm run preview",
    "generate:types": "node scripts/generate-remote-types.js"
  },
  "dependencies": {
    "@ant-design/icons": "^5.2.6",
    "antd": "^5.12.0",
    "dayjs": "^1.11.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.0"
  },
  "devDependencies": {
    "@originjs/vite-plugin-federation": "^1.3.5",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.0"
  }
}
